
<!--pages/movie/movie.wxml-->
<view class="weui-panel weui-panel_access">
  <view class="weui-panel__hd">最新热映</view>
  <scroll-view enable-back-to-top="{{true}}" scroll-y style="height:{{scrollHeight}}px" class="weui-panel__bd">
    <navigator url="../moviedetail/moviedetail?id={{item.id}}" wx:for="{{movieList}}" wx:key="{{index}}" data-movie_id="{{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
        <image class="weui-media-box__thumb" src="{{item.img}}" style="background:#ccc;" />
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title">{{item.nm}}</view>
        <view class="weui-media-box__desc">{{item.cat}}</view>
        <view class="weui-media-box__desc">{{item.star}}</view>
        <view class="weui-media-box__desc">{{item.showInfo}}</view>
        <view class="movie-rank">{{item.sc}}
          <text>分</text>
        </view>
      </view>
    </navigator>
    <view class="weui-panel__ft">
      <view class="weui-cell weui-cell_access weui-cell_link">
        <view class="weui-cell__bd">查看更多</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </scroll-view>
</view>




    